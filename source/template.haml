%h1.page-header1
  %a{href: '/', title: 'Language compare'}
    Language compare

%h2.page-header2 #{lang1} <> #{lang2}

.container-fluid
  .row
    .col-md-3
      .lang-block
        .page-link
          = link_to 'Ruby <> CoffeeScript', "ruby-coffeescript.html"
        .page-link
          = link_to 'Ruby <> Java', "ruby-java.html"
    .col-md-3
      .lang-block
        .page-link
          = link_to 'CoffeeScript <> Ruby', "coffeescript-ruby.html"
        .page-link
          = link_to 'CoffeeScript <> Java', "coffeescript-java.html"
    .col-md-3
      .lang-block
        .page-link
          = link_to 'Java <> Ruby', "java-ruby.html"
        .page-link
          = link_to 'Java <> CoffeeScript', "java-coffeescript.html"
    .col-md-3

  .row
    .col-md-6
      = partial(:content, locals: {filter: -> (hash_index, hash_size) { hash_index < hash_size } })
    .col-md-6
      = partial(:content, locals: {filter: -> (hash_index, hash_size) { hash_index >= hash_size } })

  .row
    .col-md-6
      %h2.compare-header2 #{lang1}
    .col-md-6
      %h2.compare-header2 #{lang2}

  - data.code.each do |section|
    %h3.compare-header3{id: header_to_id(section.first)}= section.first
    - section.last.each do |header, code|
      %h4.compare-header4{id: header_to_id("#{section.first}_#{header}")}= header
      .row
        .col-md-6
          = code_file(code.send(lang1.downcase))
        .col-md-6
          = code_file(code.send(lang2.downcase))

%span#top-link-block
  %a.scrollTop.well.well-sm{href: '#top'}
    Top
